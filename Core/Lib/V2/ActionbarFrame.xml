    <CheckButton name="ABP_ActionBar1ButtonTemplate" virtual="true" inherits="ABP_ActionBarButtonTemplate">
    </CheckButton>

    <Frame name="ABP_ActionBarTemplate" toplevel="true" frameStrata="MEDIUM" virtual="true" hidden="true"
           mixin="ABP_ActionBarMixin">
        <Scripts>
            <OnLoad method="OnLoad" inherit="append"/>
            <OnEvent method="OnEvent" inherit="append" />
        </Scripts>
        <Size x="500" y="38"/>
        <Attributes>
            <Attribute name="buttonSize" type="number" value="6"/>
        </Attributes>
        <Frames>
            <CheckButton name="$parentButton1" parentKey="Button1" inherits="ABP_ActionBar1ButtonTemplate" id="1">
                <Anchors>
                    <Anchor point="BOTTOMLEFT"/>
                </Anchors>
            </CheckButton>
            <CheckButton name="$parentButton2" parentKey="Button2" inherits="ABP_ActionBar1ButtonTemplate" id="2">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentButton1" relativePoint="RIGHT" x="6" y="0"/>
                </Anchors>
            </CheckButton>
            <CheckButton name="$parentButton3" parentKey="Button3" inherits="ABP_ActionBar1ButtonTemplate" id="3">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentButton2" relativePoint="RIGHT" x="6" y="0"/>
                </Anchors>
            </CheckButton>
            <CheckButton name="$parentButton4" parentKey="Button4" inherits="ABP_ActionBar1ButtonTemplate" id="4">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentButton3" relativePoint="RIGHT" x="6" y="0"/>
                </Anchors>
            </CheckButton>
            <CheckButton name="$parentButton5" parentKey="Button5" inherits="ABP_ActionBar1ButtonTemplate" id="5">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentButton4" relativePoint="RIGHT" x="6" y="0"/>
                </Anchors>
            </CheckButton>
        </Frames>
    </Frame>

    <Frame name="ABP_ActionBar1" inherits="ABP_ActionBarTemplate" parent="UIParent">
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent" relativePoint="TOP">
                <Offset>
                    <AbsDimension x="150" y="-100"/>
                </Offset>
            </Anchor>
        </Anchors>
    </Frame>

    <Frame name="ABP_ActionBarButtonEventsFrame" mixin="ABP_ActionBarButtonEventsFrameMixin">
        <Scripts>
            <OnLoad method="OnLoad"/>
